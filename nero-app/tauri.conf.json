{
  "build": {
    "beforeDevCommand": "cd ./nero-ui && trunk serve",
    "beforeBuildCommand": "cd ./nero-ui && trunk build",
    "devPath": "http://localhost:1420",
    "distDir": "../nero-ui/dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "nero",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "Nero",
        "width": 1160,
        "height": 680
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "moe.nero.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
